<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/greeting"
            android:layout_gravity="center"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp">

            <Button
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:text="@string/btn_lbl_connect_to_server"
                    android:id="@+id/btn_connect_to_server"
                    android:onClick="@string/on_btn_click_method_name"
                    android:layout_gravity="center"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/connection_result"
                    android:id="@+id/tv_conection_result"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp">

            <Button
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:text="@string/btn_lbl_send_msg_to_server"
                    android:id="@+id/btn_send_msg_to_server"
                    android:onClick="@string/on_btn_click_method_name"
                    android:layout_gravity="center"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/sending_msg_result"
                    android:id="@+id/tv_sending_msg_result"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
